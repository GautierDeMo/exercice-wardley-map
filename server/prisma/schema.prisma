generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(uuid())
  title     String
  price     Decimal
  stock     Stock?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Stock {
  productId String  @id
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  version   Int     @default(0) // Optimistic Locking
}

model Order {
  id        String   @id @default(uuid())
  status    String   // Draft, Pending, Paid, Expired, Conflict, Refunded, Prepared, Shipped
  total     Decimal
  items     Json     // Snapshot of items
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Outbox {
  id          String   @id @default(uuid())
  aggregateId String
  type        String   // e.g., "ORDER_CREATED", "STOCK_RESERVED"
  payload     Json
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Cart {
  id        String      @id @default(uuid())
  events    CartEvent[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model CartEvent {
  id        String   @id @default(uuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id])
  type      String   // ITEM_ADDED, PROMO_APPLIED
  payload   Json
  createdAt DateTime @default(now())
}
